<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Products</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h1>Product List</h1>

    <!-- Add Product Button to redirect to add-product.ejs page -->
    <div>
    <a href="/add-product"><button type="button">Add Products</button></a>
    </div>

    <table border="1">
      <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Price (USD)</th>
        <th>Actions</th>
      </tr>
      <% products.forEach(product => { %>
      <tr>
        <td><%= product.Name %></td>
        <td><%= product.Quantity %></td>
        <td><%= product.Price %></td>
        <td>
          <!-- Delete Button -->
          <form action="/products/delete" method="POST" style="display: inline">
            <input type="hidden" name="id" value="<%= product.id %>" />
            <button type="submit">Delete</button>
          </form>

          <!-- Update Button (Redirect to update page) -->
          <a href="/products/update/<%= product.id %>">
            <button type="button">Update</button>
          </a>
        </td>
      </tr>
      <% }); %>
    </table>
  </body>
</html>
